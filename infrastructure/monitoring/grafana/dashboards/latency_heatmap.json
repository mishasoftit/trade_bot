{
  "title": "Latency Heatmaps",
  "tags": ["performance", "latency"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Exchange API Latency",
      "type": "heatmap",
      "gridPos": {"x":0,"y":0,"w":24,"h":8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(exchange_api_latency_seconds_bucket[5m])) by (le, exchange)",
          "legendFormat": "{{exchange}}"
        }
      ],
      "options": {
        "color": {"mode": "spectrum", "exponent": 0.5}
      }
    },
    {
      "id": 2,
      "title": "Order Processing Latency",
      "type": "heatmap",
      "gridPos": {"x":0,"y":8,"w":24,"h":8},
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(order_processing_latency_seconds_bucket[5m])) by (le, service)",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "Risk Calculation Times",
      "type": "heatmap",
      "gridPos": {"x":0,"y":16,"w":24,"h":8},
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(risk_calculation_time_seconds_bucket[5m])) by (le)",
          "legendFormat": "Risk Calculation"
        }
      ]
    }
  ]
}